!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %title Awesome Image Viewer
    %link{rel: 'stylesheet', media: 'screen', href: '/normalize.css'}
    %link{rel: 'stylesheet', media: 'screen', href: '/font-awesome.min.css'}
    %link{rel: 'stylesheet', media: 'screen', href: '/application.css'}

  %body
    #main-content
      #find-guide
        .loading.hidden
          %p.spinner
            %i.icon-spinner
        .content
          %p.find Find a guide:
          %ul
            %li b995492d5e7943e3b2757a88fe3ef7c6
            %li 0bed6fee853b4f4e966cec0f1210079d
          %form{action: 'get_guide', method: :get, id: 'guide-form'}
            %input{autofocus: true, id: 'guide-uuid', type:'text', placeholder: "Guide uuid ...", value: 'b995492d5e7943e3b2757a88fe3ef7c6'}
            %input.btn{type:'submit', value: 'Find Guide'}

      .guides-wrap
        #guides
          .guide.template
            %p
              %img
            .info
              %h2.title
              %p.summary
              %p.author
            .start-guide
              %a.btn{href:'#'} Start the guide
    #guide-overlay.hidden
    #guide-viewer.hidden
      .content-wrap
        %img{src:""}
        %p.instructions
      .controls
        %a.previous{href: "#"}
          %i.icon-chevron-left
        %a.next{href: "#"}
          %i.icon-chevron-right
    %script{src:'application.js'}
